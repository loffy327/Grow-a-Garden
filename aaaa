local function makePanel(name)
    local p = Instance.new("Frame")
    p.Name = name.."Panel"
    p.Size = UDim2.new(1,0,1,0)
    p.BackgroundTransparency = 1
    p.Visible = false
    p.Parent = contentArea
    return p
end


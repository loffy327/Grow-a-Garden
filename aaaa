local vim = game:GetService("VirtualInputManager")
local matchOn = false
local matchDone = false

local function pressKey(keyCode)
    vim:SendKeyEvent(true, keyCode, false, game)
    task.wait(0.1)
    vim:SendKeyEvent(false, keyCode, false, game)
    task.wait(0.1)
end

startMatchBtn.MouseButton1Click:Connect(function()
    matchOn = not matchOn
    if matchOn then
        startMatchBtn.Text = "Start Match [ON]"
        if not matchDone then
            matchDone = true
            local args = {
                [1] = "Add",
                [2] = 3
            }
            game:GetService("ReplicatedStorage"):WaitForChild("RemoteEvents"):WaitForChild("TeleportEvent"):FireServer(unpack(args))
            -- nhấn \, s x3, Enter
            pressKey(Enum.KeyCode.BackSlash)
            pressKey(Enum.KeyCode.S)
            pressKey(Enum.KeyCode.S)
            pressKey(Enum.KeyCode.S)
            pressKey(Enum.KeyCode.Return)
        end
    else
        startMatchBtn.Text = "Start Match [OFF]"
    end
end)


local farming = false
farmToggle.MouseButton1Click:Connect(function()
    farming = not farming
    farmToggle.Text = farming and "Stop Farm" or "Start Farm"
    if farming then
        game:GetService("StarterGui"):SetCore("SendNotification", {
            Title = "Farm";
            Text = "Farm started (placeholder).";
            Duration = 3;
        })
    else
        game:GetService("StarterGui"):SetCore("SendNotification", {
            Title = "Farm";
            Text = "Farm stopped.";
            Duration = 3;
        })
    end
end)

